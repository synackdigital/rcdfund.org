{
  "name": "synackdigital/rcdfund",
  "description": "Wordpress site for RCDFund.org",
  "license": "MIT",
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "3.8",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/3.8.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    },
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "wordpress": "3.8",
    "fancyguy/webroot-installer": "1.1.0",
    "wpackagist/logged-in": "1.0.4",
    "wpackagist/mailchimp": "1.4.1",
    "wpackagist/custom-post-type-ui": "0.8.2",
    "wpackagist/insert-pages": "*@dev",
    "wpackagist/advanced-custom-fields": "*"
  },
  "extra": {
    "webroot-dir": "wordpress",
    "webroot-package": "wordpress",
    "installer-paths": {
      "app/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  }
}
